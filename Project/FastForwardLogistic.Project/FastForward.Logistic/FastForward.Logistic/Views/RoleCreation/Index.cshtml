                                    <div class="panel-heading"></div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-3">
                                                Company
                                            </div>
                                            <div class="col-md-7">
                                                @Html.DropDownList("CompanyList", new List<SelectListItem>(), "Select Type", new { @class = "form-control CompanyList" })
                                            </div>
                                        </div>

                                        <div class="row top-buffer">
                                            <div class="col-md-3">
                                                Role ID
                                            </div>
                                            <div class="col-md-5">
