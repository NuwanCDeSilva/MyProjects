@{
    ViewBag.Title = "Bonus Adjustments";
    var val = System.Web.Configuration.WebConfigurationManager.AppSettings["SiteVersion"].ToString();
}
@section Scripts {
    <script src="~/Scripts/Common/CollectionBonusAdjustments.js?@val"></script>
<script src="~/Scripts/Common/PageSript.js"></script>
}
@section style{
<link href="~/Content/smartpaginator.css" rel="stylesheet" />
    }
<div class="op-btns">
    <div class="col-md-6">
        <div class="page-title">Collection Bonus Adjustments</div>
    </div>
    <div class="col-md-6" style="width:540px">
        <input type="button" value="Clear" class="btn btn-default btn-default-style btn-clear-data" />
        <input type="button" value="Save" class="btn btn-default btn-default-style btn-save-data" />
        <input type="button" value="View" class="btn btn-default btn-default-style btn-view-data" />
    </div>
</div>

<div class="demopage">
    <div class="container1">
        <div class="panel panel-default row">
            <div class="panel panel-heading"></div>
            <div class="panel-container">
                <div class="panel panel-body tab-content-cls">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-3">
                                <label class="col-lg-4 control-label">Profic Center</label>
                                <div class="col-md-8">
                                    <input type="text" id="location" name="location" class="form-control with-search" readonly>
                                    <img src="~/Resources/Images/Search-icon.png" class="search-img  loc-search">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="col-lg-4 control-label">Search</label>
                                <div class="col-md-8">
                                    <input type="text" id="Searchval" name="location" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="col-lg-4 control-label">Month</label>
                                <div class="col-md-8">
                                    <input type="text" id="monthdate" name="monthdate" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="col-lg-4 control-label">Effect Month</label>
                                <div class="col-md-8">
                                    <input type="text" id="effectmonth" name="effectmonth" class="form-control">
                                </div>
                            </div>
                          
                           
                          
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <label class="col-lg-4 control-label">Grace Date</label>
                                <div class="col-md-8">
                                    <input type="text" id="gdate" name="gdate" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="col-lg-4 control-label">Account No</label>
                                <div class="col-md-8">
                                    <input type="text" id="accno" name="accno" class="form-control with-search" readonly>
                                    @*<img src="~/Resources/Images/Search-icon.png" class="search-img  accno-search">*@
                                </div>
                            </div> 
                            <div class="col-md-3">
                                <label class="col-lg-4 control-label">Scheme&Period</label>
                                <div class="col-md-8">
                                    <input type="text" id="schem" name="schem" class="form-control" readonly>
                                </div>
                            </div> 
                            <div class="col-md-3">
                                <label class="col-lg-4 control-label">Arrears Amount</label>
                                <div class="col-md-8">
                                    <input type="text" id="arramt" name="arramt" class="form-control" readonly>
                                </div>
                            </div> 

                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <label class="col-lg-4 control-label">Gr/Pr Settlement</label>
                                <div class="col-md-8">
                                    <input type="text" id="grpsettl" name="grpsettl" class="form-control" readonly>
                                </div>
                            </div> 
                            <div class="col-md-3">
                                <label class="col-lg-4 control-label">DG 1 Month</label>
                                <div class="col-md-8">
                                    <input type="text" id="dg1month" name="dg1month" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="col-lg-4 control-label">Service</label>
                                <div class="col-md-8">
                                    <input type="text" id="service" name="service" class="form-control" >
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="col-lg-4 control-label">Dispute</label>
                                <div class="col-md-8">
                                    <input type="text" id="dispute" name="dispute" class="form-control">
                                </div>
                            </div> 




                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <label class="col-lg-4 control-label">Diriya</label>
                                <div class="col-md-8">
                                    <input type="text" id="diriya" name="diriya" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="col-lg-4 control-label">LOD</label>
                                <div class="col-md-8">
                                    <input type="text" id="lod" name="lod" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="col-lg-4 control-label">S/R Computer</label>
                                <div class="col-md-8">
                                    <input type="text" id="srcomp" name="srcomp" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="col-lg-4 control-label">Other</label>
                                <div class="col-md-8">
                                    <input type="text" id="other" name="other" class="form-control">
                                </div>
                            </div>



                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <label class="col-lg-4 control-label">Reason</label>
                                <div class="col-md-8">
                                    @Html.DropDownList("reson", new List<SelectListItem>(), "Select Type", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="col-lg-4 control-label">Hand/Rej</label>
                                <div class="col-md-8">
                                    <input type="text" id="handovrrej" name="handovrrej" class="form-control with-search" readonly>
                                    <img src="~/Resources/Images/arrow_down.png" class="search-img add-adj">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="col-lg-4 control-label">Tot Adjustments</label>
                                <div class="col-md-8">
                                    <input type="text" id="totadjs" name="totadjs" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="col-lg-4 control-label">Net Arrears</label>
                                <div class="col-md-8">
                                    <input type="text" id="netarrears" name="netarrears" class="form-control" readonly>
                                </div>
                            </div>
  
                        </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default row">
        <div class="panel panel-heading">Adjustments Details</div>
        <div class="panel-container">
            <div class="panel panel-body tab-content-cls">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="comm-comm-list-div-scroll">
                                <table class="table table-striped table-hover adj-data-row" id="dt">
                                    <tr>
                                        <th style="color: black; font-size: x-small">Location</th>
                                        <th style="color: black; font-size: x-small">Month</th>
                                        <th style="color: black; font-size: x-small">Account</th>
                                        <th style="color: black; font-size: x-small;text-align:right">Arrears</th>
                                        <th style="color: black; font-size: x-small;text-align:right">Grace</th>
                                        <th style="color: black; font-size: x-small;text-align:right">DG</th>
                                        <th style="color: black; font-size: x-small;text-align:right">Service</th>
                                        <th style="color: black; font-size: x-small; text-align: right">Dispute</th>
                                        <th style="color: black; font-size: x-small; text-align: right">Diriya</th>
                                        <th style="color: black; font-size: x-small; text-align: right">LOD</th>
                                        <th style="color: black; font-size: x-small; text-align: right">Compu</th>
                                        <th style="color: black; font-size: x-small; text-align: right">Other</th>
                                        <th style="color: black; font-size: x-small; text-align: right">Reason</th>
                                        <th style="color: black; font-size: x-small; text-align: right">H/Over</th>
                                        <th style="color: black; font-size: x-small; text-align: right">Tot/Adj</th>
                                        <th style="color: black; font-size: x-small; text-align: right">Net/Arr</th>
                                        <th></th>
                                    </tr>
                                </table>
                            </div>
                            <div id="green" style="margin: auto;">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>