@model FF.BusinessObjects.SystemUser

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var val = System.Web.Configuration.WebConfigurationManager.AppSettings["SiteVersion"].ToString();
}
@section Scripts
{
    <script src="~/Scripts/Common/UpdateProfile.js?@val"></script>
}
<div class="add-emp-cls">
    <div class="container1 op-btns">
        <div class="row">
            <div class="col-md-4">
                <div class="page-title">Update Profile</div>
            </div>
            <div class="col-md-8">
                <input type="submit" value="Update" class="btn btn-default btn-default-style btn-save-data" />
            </div>
        </div>
    </div>
    @using (Html.BeginForm("UpdateProfile", "updatePassword", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal up-prof-frm", role = "form", @id = "up-prof-frm" }))
    {
        <div class="demopage">
            <div class="container1">
                <div class="panel-sep">
                    <div class="panel panel-heading">Update Profile</div> 
                    <div class="panel-container">
                        <div class="panel panel-body tab-content-cls">
                            <div class="form-horizontal">

                                <div class="row">
                                    <div class="col-md-6 form-group">
                                        <label class="col-lg-4 control-label">User Id</label>
                                        <div class="col-lg-7">
                                            @Html.EditorFor(m => m.Se_usr_id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-6 form-group">
                                        <label class="col-lg-4 control-label">User Name</label>
                                        <div class="col-lg-7">
                                            @Html.EditorFor(model => model.Se_usr_name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 form-group">
                                        <label class="col-lg-4 control-label">Current Password</label>
                                        <div class="col-lg-7">
                                            @Html.PasswordFor(m => m.Se_usr_pw,new { @class = "form-control required-field", maxlength = "25"  })
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 form-group">
                                        <label class="col-lg-4 control-label">New Password</label>
                                        <div class="col-lg-7">
                                            <input id="newPassword" name="newPassword" type="password" maxlength="25" class="form-control" />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 form-group">
                                        <label class="col-lg-4 control-label">Confirm Password</label>
                                        <div class="col-lg-7">
                                            <input id="confirmPassword" name="confirmPassword" type="password" maxlength="25" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }

</div>
