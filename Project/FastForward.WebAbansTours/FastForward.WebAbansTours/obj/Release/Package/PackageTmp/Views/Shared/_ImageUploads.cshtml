
<div class="panel-default col-md-6">

        <div class="panel panel-heading">Attach Documents</div>
        <div class="panel-container">

            <div class="panel panel-body  tab-content-cls">
                <div class="row">
                    <div class="col-md-12">
                        @using (Html.BeginForm("Multiple", "ImageUpload", FormMethod.Post, new { enctype = "multipart/form-data", role = "form", @id = "img-upload-frm" }))
                        {
                            <div class="col-md-8">
                                <input type="file" name="files" multiple required/>
                                <input type="hidden" name="controllers" value=@HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control with-search" id="job_number" name="job_number" placeholder="Job Number" required />
                            </div>
                            <div class="col-md-4">
                                <input type="submit" value="Upload" class="btn btn-xs btn-default image-submit" />
                            </div>
                        }
                       
                       
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 panel-default">

        <div class="panel panel-heading">View Documents</div>
        <div class="panel panel-body tab-content-cls">
            <div class="col-md-6">
                @using (Html.BeginForm("Multiple", "ImageUpload", FormMethod.Post, new { enctype = "multipart/form-data", role = "form", @id = "img-upload-frm2" }))
                {
                    <div>
                        <input type="text" class="form-control with-search" id="job_number2" name="job_number2" placeholder="Job Number" required />
                        <img src="~/Resources/Images/Search-icon.png" class="search-img enq-id-search-new">
                        <input type="button" class="btn btn-xs btn-default get-images" value="Select" />
                    </div>



                }

            </div>
            <div class="col-md-6">
                <div class="image-view-grid">
                </div>
            </div>

        </div>

    </div>
