                                            </div>
                                        </div>

                                        <div class="row top-buffer">
                                            <div class="col-md-3">
                                                Active
                                            </div>
                                            <div class="col-md-7">
                                                @Html.CheckBox("IsActive", false, new { @disabled = "disabled" })
                                            </div>
                                        </div>
                                        <div id="hiddentextid" class="hiddentext"> </div>
                                        <button type="button" id="addtable" class="btn btn-default btn-sm addtable">Load</button>


                                    </div>
                                </div>
                            </div>

