@{
    ViewBag.Title = "Petty Cash/Payment Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var val = System.Web.Configuration.WebConfigurationManager.AppSettings["SiteVersion"].ToString();
}
@section Scripts
{
    <script src="~/Scripts/Common/DocumentReprint.js?@val"></script>
}
@section Styles {
    <link href="~/Content/PettyCash.css?@val" rel="stylesheet" type="text/css" />
}

<div class="content-wrapper">

    <section class="content-header text-left">
        <h1>
            Document Reprint
            @*<small>Form</small>*@
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Home"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active"> Document Reprint</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content clearfix">

        <!-- button container set begin -->
        <div class="col-md-12 text-right btn-scroll-top ">
            <button class="btn btn-sm btn-green-fullbg btn-emp-save-data">
                <i class="glyphicon glyphicon-ok-circle"></i> Approve
            </button>
            <button class="btn btn-sm btn-ash-fullbg btn-emp-update-data">
                <i class="glyphicon glyphicon-pencil"></i> Update
            </button>

            <button class="btn btn-sm btn-red-fullbg btn-emp-clear-data">
                <i class="glyphicon glyphicon-refresh"></i> Clear
            </button>
        </div>
        <!-- button container set end-->
        @using (Html.BeginForm("SaveData", "PettyCase", FormMethod.Post, new { enctype = "multipart/form-data", @id = "pettcase-frm" }))
        {
            <div class="row">
                <div class="col-lg-4">
                    <!-- contact details begin -->
                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title form-headding">Select Option</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            </div>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <span class="input-group-btn">
                                            <button type="button" data-toggle="modal" data-target="#modalviewdf" class="btn btn-success btn-block btn-green-fullbg btn-house-bl"><b>Delivery Order Reprint</b></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <!-- /.row -->
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                    <!-- contact details end -->

                </div>
                
                    <div class="col-lg-7">
                        <!-- contact details begin -->
                        <div class="box">
                            <div class="box-header with-border">
                                <h3 class="box-title form-headding">Document Details</h3>
                                <div class="box-tools pull-right">
                                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                </div>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <div class="row">

                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>House BL No</label>
                                            <div class="input-group input-group-sm">
                                                @Html.Editor("Bl_h_doc_no", new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>


                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <!--<label style="margin-left:15px;">Job No</label>-->
                                            <label>Job No</label>
                                            <div class="input-group input-group-sm">
                                                <input id="job-number" type="text" name="job-number" class="form-control" style="width:140px;" />

                                            </div>
                                        </div>
                                    </div>
                                    @*<div class="col-lg-3">
                                        <div class="form-group">
                                            <label style="margin-left:15px;">Printed Count</label>
                                            <label>Job No</label>
                                            <div class="input-group input-group-sm">
                                                <input id="job-number" type="text" name="job-number" class="form-control" style="width:120px;" />

                                            </div>
                                        </div>
                                    </div>*@
                                </div>
                                <!-- /.row -->
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                        <!-- contact details end -->

                    </div>
                
            </div>
            
            
        }


    </section>
    <!-- end main section -->
    <!-- right side end-->
    <!-- end main section -->
</div>
<!-- /.content-wrapper -->