@{
    ViewBag.Title = "Bonus Process";
    var val = System.Web.Configuration.WebConfigurationManager.AppSettings["SiteVersion"].ToString();
}
@section Scripts {
    <script src="~/Scripts/Common/ProductBonusProcess.js?@val"></script>
}
<div class="op-btns">
    <div class="col-md-6">
        <div class="page-title">Bonus Process</div>
    </div>
    <div class="col-md-6">
        <input type="button" value="Clear" class="btn btn-default btn-default-style btn-clear-data" />
        <input type="button" value="View" class="btn btn-default btn-default-style btn-show-data" />
        <input type="button" value="Finalize" class="btn btn-default btn-default-style btn-save-data" />
    </div>
</div>
<div class="demopage">
    <div class="container1">
        <div class="panel panel-default row">
            <div class="panel panel-heading"></div>
            <div class="panel-container">
                <div class="panel panel-body tab-content-cls">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12 row">
                                <div class="col-md-3">
                                    <div class="col-md-10">
                                        <label class="col-lg-4 control-label">Bonus Code</label>
                                        <div class="col-md-8">
                                            <input type="text" id="Code" name="Code" class="form-control with-search">
                                            <img src="~/Resources/Images/Search-icon.png" class="search-img  Code-search">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="col-md-10">
                                        <label class="col-lg-4 control-label">From Date</label>
                                        <div class="col-md-8">
                                            <input type="text" id="fdate" name="fdate" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="col-md-10">
                                        <label class="col-lg-4 control-label">To Date</label>
                                        <div class="col-md-8">
                                            <input type="text" id="tdate" name="tdate" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 row">
                                <div class="col-md-3">
                                    <div class="col-md-10">
                                        <label class="col-lg-4 control-label">Sales From</label>
                                        <div class="col-md-8">
                                            <input type="text" id="sfdate" name="sfdate" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="col-md-10">
                                        <label class="col-lg-4 control-label">Sales To</label>
                                        <div class="col-md-8">
                                            <input type="text" id="stdate" name="stdate" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default row">
            <div class="panel panel-heading">Bonus Details</div>
            <div class="panel-container">
                <div class="panel panel-body tab-content-cls">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="bonus-list-div-scroll">
                                    <table class="table table-striped table-hover bonus-data-row">
                                        <tr>
                                            <th style="color: black; font-size: x-small">Exec Code</th>
                                            <th style="color: black; font-size: x-small">Exec Name</th>
                                            <th style="color: black; font-size: x-small">PC</th>
                                            <th style="color: black; font-size: x-small">Total Sale</th>
                                            <th style="color: black; font-size: x-small">Total Qty</th>
                                            <th style="color: black; font-size: x-small">Total Marks</th>
                                            <th style="color: black; font-size: x-small">Invoices</th>
                                        </tr>
                                    </table>
                                </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade my-popup-div" id="invoicedetails" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="cus-title">Invoices Details</h4>
            </div>
            <div class="col-md-12">
                <div class="comm-comm-list-div-scroll">
                    <table class="table table-striped table-hover invoice-data-row">
                        <tr>
                            <th style="color: black; font-size: x-small">Invoice No</th>
                            <th style="color: black; font-size: x-small">Item Code</th>
                            <th style="color: black; font-size: x-small">Total Value</th>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>